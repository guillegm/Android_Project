<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.75">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="DETAILS"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="OK"
            android:id="@+id/button_ok"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/message" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.25"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Alarm"
            android:id="@+id/tv_alarm"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp" />

        <Switch
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/switch_alarm"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:checked="false"
            android:buttonTint="#db45ff2e"
            android:buttonTintMode="src_atop" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/switch_alarm"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/switch_alarm"
            android:layout_marginBottom="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Location"
            android:id="@+id/tv_location"
            android:layout_below="@+id/editText"
            android:layout_alignStart="@+id/editText" />

        <Switch
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/switch_location"
            android:checked="false"
            android:buttonTint="#db45ff2e"
            android:buttonTintMode="src_atop"
            android:layout_alignBottom="@+id/tv_location"
            android:layout_alignEnd="@+id/editText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_below="@+id/tv_location"
            android:layout_alignEnd="@+id/switch_location"
            android:layout_alignStart="@+id/tv_location" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/button_delete"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="49dp" />

    </RelativeLayout>

</LinearLayout>